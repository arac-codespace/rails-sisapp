<!DOCTYPE html>
<html>
  <head>
    <title>Sisblog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <div class='banner text-center container-fluid'>
      <h1>SisBlog</h1>
    </div>
      
    <div class="container-fluid nav-container">
      <!-- Second navbar for search -->
      <nav class="navbar navbar-inverse">
        <div class="container-fluid navbar-container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to root_path, class: "navbar-brand" do %>
              Sakura Street
            <% end %>
          </div>
      
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Inicio", root_path %></li>
              <li><%= link_to "ReseÃ±as", resenas_path %></li>
              <li><%= link_to "Manualidades", "#" %></li>
              <li><%= link_to "Cuidado Personal","#" %></li>
              <li><%= link_to "Otros","#" %></li>
              <li><%= link_to "Sobre Nosotras", sobre_nosotras_path %></li>
              <li class= 'login_logout_btn'>
                <% if user_signed_in? %>
                  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
                <% else %>
                  <%= link_to('Login', new_user_session_path) %>
                <% end %>
              </li>                
              <!--<li>-->
              <!--  <a class="glyphicon glyphicon-search"  data-toggle="collapse" href="#nav-collapse-s" aria-expanded="false" aria-controls="nav-collapse3"></a>-->
              <!--</li>-->
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container -->
      </nav><!-- /.navbar -->
    </div><!-- /.container-fluid -->   
    
    <!-- Search Form -->              
    <!--<div class="collapse nav navbar-nav nav-collapse" id="nav-collapse-s">-->
