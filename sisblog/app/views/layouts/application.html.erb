<!DOCTYPE html>
<html>
  <head>
    <title>Sisblog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='banner text-center container-fluid'>
      <h1>SisBlog</h1>
    </div>
    <nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class='container'>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "SisBlog", root_path, :class => "navbar-brand" %>
      </div> <!-- Hamburger and logo end tag-->
      
      <!-- Items to collapse in hamburger-->
      <div class="collapse navbar-collapse" id="main-nav-collapse">
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Inicio", root_path %></li>
          <li><%= link_to "ReseÃ±as", resenas_path %></li>
          <li><%= link_to "Manualidades", "#" %></li>
          <li><%= link_to "Cuidado Personal","#" %></li>
          <li><%= link_to "Otros","#" %></li>
          <li><%= link_to "Sobre Nosotras", sobre_nosotras_path %></li>
          <li> <!-- Search form and button! -->
            <form class="navbar-form navbar-left" role="search">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </form>
          </li>  
          <li class= 'login_logout_btn'>
            <% if user_signed_in? %>
              <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
            <% else %>
              <%= link_to('Login', new_user_session_path) %>
            <% end %>
          </li>
        </ul> <!-- Navbar link list colapse-->
      </div><!-- /.navbar-collapse -->
    </div>
</nav> 
    <div class  = "container flash-container">
        <% flash.each do |type,msg| %>
            <%= content_tag :div, msg, class: "alert alert-#{type}" %>
        <% end %>
    </div>
    <div class= "container">
      <%= yield %>
    </div>
  </body>
</html>
