<%= form_for @drama, :html => {:multipart => true} do |f| %>
          
  <div class= "form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>   
  
  <div class = "form-group">
    <%= f.label :category %>
    <%= f.select :category, [ "Coreanos", "Japones", 'Taiwanes', "Otros"], {}, class: 'form-control' %>
  </div>

  <div class= "form-group">
    <%= f.label :actors %>
    <%= f.text_field :actors, class: "form-control" %>
   </div> 
   
  <div class= "form-group">
    <%= f.label :drama_description %>
    <%= f.text_area :drama_description, class: "form-control" %>
  </div> 
   
  <div class= "form-group">
    <%= f.label :comments %>
    <%= f.text_area :comments, class: "form-control" %>
  </div>    
   
  <div class = "form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: 'form-control' %>
  </div>
  
  <div class= "form-group">
    <%= f.label :release_date %> 
    <%= f.date_select(:release_date, :order => [:month, :day, :year]) %>
  </div>
  
  <%= f.submit 'Submit', class: "btn btn-default" %>
  
<% end %>