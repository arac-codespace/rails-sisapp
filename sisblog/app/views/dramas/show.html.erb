<% if user_signed_in? %>
  <div class='container-fluid'>
    <div class='row add-delete-row'>
      <div class="col-sm-offset-8 col-sm-2 col-md-2 col-md-offset-8">
        <%= link_to edit_drama_path(id: @drama_show.id), class: "btn btn-default btn-block" do %>
          <i class="fa fa-plus" aria-hidden="true"> Revisar </i>
        <% end %>  
      </div>
      <div class="col-sm-2 col-md-2">
        <%= link_to drama_path(id: @drama_show.id), method: :delete, data: {confirm: "Borrar este articulo?"}, class: "btn btn-default btn-block" do %>
          <i class="fa fa-trash-o" aria-hidden="true"> Elimiar </i>
        <% end %>  
      </div>
    </div>
  </div>  
<% end %>  

<div class='container-fluid'>
  <div class='row information-row'>
    <div class = "col-xs-5 col-md-3 avatar-col">  
      <div class= 'column'>
        <%= image_tag @drama_show.avatar.url, class: 'avatar-show-img img-responsive img-thumbnail center-block' %>
        <h4 class= "text-center"> Sakura Street's rating: </h4>
        <div class= 'text-center'> <%= render_stars(@drama_show.rating) %></div>
      </div>    
    </div>
    
    <div class = "col-xs-12 col-sm-7 col-md-9 description-col">
      <div class = "well column">
        <h3 class="text-center">Titulo: <%= @drama_show.title%></h3>
        <h3> Descripcion:</h3>
        <p><%= @drama_show.drama_description %></p>
        <h4> Categoria</h4> 
        <p><%= @drama_show.category %></p>
        <h4> Actores </h4> 
        <p><%= @drama_show.actors %></p>
        <h4> Fecha de Publicacion </h4> 
        <p><%= @drama_show.release_date.to_s %></p>
      </div>  
    </div> 
  </div>
</div>     

<div class='container'>
  <div class='row'>
    <div class="col-md-10 col-md-offset-1">
      <h2> Opinion </h2>
      <div class= "well">
        <p><%= raw @drama_show.comments %></p>
      </div>
    </div>
  </div>
</div>  


<%= render 'disqus' %>