<div class='container-fluid'>
  <div class='row information-row'>
    <div class = "col-xs-5 col-md-3 avatar-col">  
      <div class= 'column'>
        <%= image_tag @drama_show.avatar.url, class: 'avatar-show-img img-responsive img-thumbnail center-block' %>
      </div>    
    </div>
    
    <div class = "col-xs-12 col-sm-7 col-md-9 description-col">
      <div class = "well column">
        <h3 class="text-center">Titulo: <%= @drama_show.title%></h3>
        <h3> Descripcion:</h3>
        <p><%= @drama_show.drama_description %></p>
        <h4> Categoria</h4> 
        <p><%= @drama_show.category %></p>
        <h4> Actores </h4> 
        <p><%= @drama_show.actors %></p>
        <h4> Fecha de Publicacion </h4> 
        <p><%= @drama_show.release_date.to_s %></p>
      </div>  
    </div> 
  </div>
</div>     


<div class='container'>
  <div class='row'>
    <div class="col-md-10 col-md-offset-1">
      <h2> Opinion </h2>
      <div class= "well">
        <p><%= raw @drama_show.comments %></p>
      </div>
    </div>
  </div>
</div>  


<% if user_signed_in? %>
  <div class='container'>
    <div class='row'>
      <div class="col-md-4 col-md-offset-4">
        <%= link_to "Edit the profile", edit_drama_path(id: @drama_show.id), class: "btn btn-default btn-lg btn-block" %>
        <%= link_to "Delete", drama_path(id: @drama_show.id), method: :delete, data: {confirm: "Really delete this profile?"}, class: "btn btn-default btn-lg btn-block" %>
      </div>
    </div>
  </div>  
<% end %>  
