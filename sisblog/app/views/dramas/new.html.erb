<h1> Add new Drama </h1>

<div class= 'container'>
  <div class: "row">
    <h3 class= 'text-center'>Add Drama</h3>
    <div class= "col-md-4 col-md-offset-4">
        <div class="well">
          <%= form_for @drama, url: {action: "create"} do |f| %>
          
            <div class= "form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control" %>
             </div>   
             
            <div class= "form-group">
                <%= f.label :description %>
                <%= f.text_area :description, class: "form-control" %>
             </div>    
                
            <%= f.submit 'Submit', class: "btn btn-default" %>
            
          <% end %>
        </div>
    </div>
  </div>
</div>