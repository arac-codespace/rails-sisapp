<% if user_signed_in? %>
  <div class='container-fluid'>
    <div class='row add-delete-row'>
      <div class="col-sm-offset-8 col-sm-2 col-md-2 col-md-offset-8">
        <%= link_to edit_other_path(id: @other_show.id), class: "btn btn-default btn-block" do %>
          <i class="fa fa-plus" aria-hidden="true"> Revisar </i>
        <% end %>  
      </div>
      <div class="col-sm-2 col-md-2">
        <%= link_to other_path(id: @other_show.id), method: :delete, data: {confirm: "Borrar este articulo?"}, class: "btn btn-default btn-block" do %>
          <i class="fa fa-trash-o" aria-hidden="true"> Delete </i>
        <% end %>  
      </div>
    </div>
  </div>  
<% end %>  

<div class='container-fluid'>
  <div class='row information-row'>
    <div class = "col-xs-5 col-md-3 avatar-col">  
      <div class= 'column'>
        <%= link_to @other_show do %>
          <% if @other_show.avatar? %>
            <%= image_tag @other_show.avatar.url, class: 'avatar-index-img img-responsive center-block' %>
          <% else %>
            <%= image_tag 'flower (1).png' %>
          <% end %>
        <% end %>
        <h4 class= "text-center"> Sakura Street's rating: </h4>
        <div class= 'text-center'> <%= render_stars(@other_show.rating) %></div>
      </div>    
    </div>
    
    <div class = "col-xs-12 col-sm-7 col-md-9 description-col">
      <div class = "well column">
        <h3 class="text-center">Titulo: <%= @other_show.title%></h3>
        <h3> Descripcion:</h3>
        <p><%= @other_show.other_description %></p>
        <h4> Actores </h4> 
        <p><%= @other_show.actors %></p>
        <h4> Fecha de Publicacion </h4> 
        <p><%= @other_show.release_date.to_s %></p>
      </div>  
    </div> 
  </div>
</div>     

<div class='container'>
  <div class='row'>
    <div class="col-md-10 col-md-offset-1">
      <h2> Opinion </h2>
      <div class= "well">
        <p><%= raw @other_show.comments %></p>
      </div>
    </div>
  </div>
</div>  


<%= render 'disqus' %>