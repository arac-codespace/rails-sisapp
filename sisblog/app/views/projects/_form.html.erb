<%= form_for @project, :html => {:multipart => true} do |f| %>
          
  <div class= "form-group">
    <%= f.label :title, "Título" %>
    <%= f.text_field :title, :required => true, class: "form-control" %>
  </div>   
   
  <div class= "form-group">
    <%= f.label :project_description, "Descripción" %>
    <%= f.text_area :project_description, class: "form-control" %>
  </div> 

  <!-- f.cktest_area is a ckeditor method to include its text editor into a form field-->
  <div class= "form-group">
    <%= f.label :comments, "Reseña" %>
    <%= f.cktext_area :comments, :ckeditor => {:toolbar => "mini"}, class: "form-control" %>
  </div>    
   
  <div class = "form-group">
    <%= f.label :avatar, "Imagen" %>
    <%= f.file_field :avatar, class: 'form-control' %>
  </div>
  
  
  <%= f.submit 'Enviar', class: "btn btn-default" %>
  
<% end %>