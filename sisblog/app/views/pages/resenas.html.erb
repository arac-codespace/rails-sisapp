<!-- ACTIVITY LOG HTML-->

<div class='container'>
  <div class='row'>
    <div class = "col-md-offset-1 col-md-10">
      <div class="panel panel-default">
        <!-- Panel contents -->
        <div class="panel-heading"> <h4>Actividad Reciente</h4></div>
        <!-- Using public_activity to collect information of tracked models and display it-->
        <!-- In the controller file, activities_by_ctrl is conditioned to display certain entries 
        that belongs to a specific controller. Inspect for more details. -->
        <% @activities_by_ctrl.each do |activity| %>
          <!--render_activity looks for partials under views/public_activity/model-->
          <ul class= 'list-group'>
            <li class= 'list-group-item'><p><%= render_activity activity %></p></li>
          </ul>
       <% end %>
      </div>
    </div>
  </div>
</div>
