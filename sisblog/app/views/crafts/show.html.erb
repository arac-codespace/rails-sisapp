<div class="index-header">
  <div class= "container">
    <div class = "row">
      <div class = "col-md-12">
          
        <!-- Admin action -->
        <% if user_signed_in? %>
          <div class='row add-delete-row'>
            <div class="col-sm-offset-8 col-sm-2 col-md-2 col-md-offset-8">
              <%= link_to edit_craft_path(id: @craft_show.id), class: "btn btn-default btn-block" do %>
                <i class="fa fa-plus" aria-hidden="true"> Revisar </i>
              <% end %>  
            </div>
            <div class="col-sm-2 col-md-2">
              <%= link_to craft_path(id: @craft_show.id), method: :delete, data: {confirm: "Borrar este articulo?"}, class: "btn btn-default btn-block" do %>
                <i class="fa fa-trash-o" aria-hidden="true"> Elimiar </i>
              <% end %>  
            </div>
          </div>
        <% end %>  
        
        <!-- Information Section -->
          <div class='row information-row'>
            <div class = "col-xs-5 col-md-3 avatar-col">  
              <div class= 'column'>
                <%= link_to @craft_show do %>
                  <% if @craft_show.avatar? %>
                    <%= image_tag @craft_show.avatar.url, class: 'avatar-index-img img-responsive center-block' %>
                  <% else %>
                    <%= image_tag 'flower (1).png' %>
                  <% end %>
                <% end %>
              </div>    
            </div>
            
            <div class = "col-xs-12 col-sm-7 col-md-9 description-col">
              <div class = "well d-well column">
                <h1 class="text-center">Título: <%= @craft_show.title%></h1>
                <h3> Descripción:</h3>
                <p><%= @craft_show.craft_description %></p>
                <h3> Fecha de Reseña: </h3>
                <p><%= @craft_show.created_at.strftime("%b %d, %Y").to_s %></p>                
              </div>  
            </div> 
          </div>
      
        <!-- Body section -->
          <div class='row body-row'>
            <div class="col-md-12">
              <h2 class= 'text-center body-title'> Opinión </h2>
              <div class= "well d-well">
                <p><%= raw @craft_show.comments %></p>
              </div>
            </div>
          </div>
        <!-- Comment section render -->
        <%= render 'disqus' %>
  
      </div>  
    </div>  
  </div>
</div>