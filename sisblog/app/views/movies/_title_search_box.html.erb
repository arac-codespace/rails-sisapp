<%= search_form_for @q do |f| %>

<div class="row">
  <div class="col-sm-4 col-md-4">
    <div class="input-group">
      <span class="input-group-btn">
        <%= f.submit 'Go!', class: 'btn btn-default' %>
      </span>
        <%= f.text_field :title_or_comments_or_actors_or_category_or_movie_description_cont, placeholder: "Search field", class: 'form-control' %>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->
<% end %>



